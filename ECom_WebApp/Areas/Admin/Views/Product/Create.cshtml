@model Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient  py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white ">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body ">
        <form method="post">
            <div class="border p-3 mt-2">
                <div class="row mb-3">
                    <label asp-for="Title" class="pb-1"></label>
                    <input asp-for="Title" class="form-control bg-light text-dark"></input>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                    <label asp-for=Description class="pb-1"></label>
                    <input asp-for=Description class="form-control bg-light text-dark"></input>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                    <label asp-for=ISBN class="pb-1"></label>
                    <input asp-for=ISBN class="form-control bg-light text-dark"></input>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                    <label asp-for=Author class="pb-1"></label>
                    <input asp-for=Author class="form-control bg-light text-dark"></input>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                    <label asp-for=ListPrice class="pb-1"></label>
                    <input asp-for=ListPrice class="form-control bg-light text-dark"></input>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                    <label asp-for=Price class="pb-1"></label>
                    <input asp-for=Price class="form-control bg-light text-dark"></input>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                    <label asp-for=Price50 class="pb-1"></label>
                    <input asp-for=Price50 class="form-control bg-light text-dark"></input>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                    <label asp-for=Price100 class="pb-1"></label>
                    <input asp-for=Price100 class="form-control bg-light text-dark"></input>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                    <label asp-for=CategoryId class="pb-1"></label>
                    <select asp-for=CategoryId asp-items="ViewBag.CategoryList" class="form-select bg-light text-dark">
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
            }