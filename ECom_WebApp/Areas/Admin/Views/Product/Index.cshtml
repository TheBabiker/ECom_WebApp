@model List<Product>
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient  py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white ">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body ">
        <div class="container">
            <div class="row  pb-1">
                <div class="col-6">
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                        Create New Product <i class="bi bi-plus-circle"></i>
                    </a>
                </div>
            </div>
            <table class="table table-bordered table-striped p-3">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>ISBN</th>
                        <th>Price</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Title</td>
                            <td>@obj.ISBN</td>
                            <td>@obj.ListPrice</td>
                            <td>@obj.Author</td>
                            <td></td>
                            <td>
                                <div class=" btn-group d-flex justify-content-center" role="group">
                                    <a asp-controller="Product" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square">
                                            Edit
                                        </i>
                                    </a>
                                    <a asp-controller="Product" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash3-fill">
                                            Delete
                                        </i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
