@model Product
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient  py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white ">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body ">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-2">
                <div class="row mb-3">
                    <label asp-for="Title" class="pb-1"></label>
                    <input disabled asp-for="Title" class="form-control bg-light text-dark"></input>
                </div>
                <div class="row mb-3">
                    <label asp-for=Description class="pb-1"></label>
                    <input disabled asp-for=Description class="form-control bg-light text-dark"></input>
                </div>
                <div class="row mb-3">
                    <label asp-for=ISBN class="pb-1"></label>
                    <input disabled asp-for=ISBN class="form-control bg-light text-dark"></input>
                </div>
                <div class="row mb-3">
                    <label asp-for=Author class="pb-1"></label>
                    <input disabled asp-for=Author class="form-control bg-light text-dark"></input>
                </div>
                <div class="row mb-3">
                    <label asp-for=ListPrice class="pb-1"></label>
                    <input disabled asp-for=ListPrice class="form-control bg-light text-dark"></input>
                </div>
                <div class="row mb-3">
                    <label asp-for=Price class="pb-1"></label>
                    <input disabled asp-for=Price class="form-control bg-light text-dark"></input>
                </div>
                <div class="row mb-3">
                    <label asp-for=Price50 class="pb-1"></label>
                    <input disabled asp-for=Price50 class="form-control bg-light text-dark"></input>
                </div>
                <div class="row mb-3">
                    <label asp-for=Price100 class="pb-1"></label>
                    <input disabled asp-for=Price100 class="form-control bg-light text-dark"></input>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



