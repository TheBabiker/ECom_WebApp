@model Category
<div class="card shadow border-0 ">
<div class="card-header bg-secondary bg-gradient  py-2">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-white ">Delete Category</h2>
        </div>
    </div>
</div>
<div class="card-body ">
    <form method="post">
        <input asp-for="Id" hidden />
        <div class="border p-3 mt-2">
            <div class="row mb-3">
                <label asp-for="Name" class="pb-1"></label>
                <input asp-for="Name" disabled class="form-control bg-light text-dark"></input>
            </div>
            <div class="row mb-3">
                <label asp-for=DisplayOrder class="pb-1"></label>
                <input asp-for=DisplayOrder disabled class="form-control bg-light text-dark"></input>
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back To List</a>
                </div>
            </div>
        </div>
    </form>
</div>
</div>



